@{
    ViewData["Title"] = "Home Page";
}
<header class="header">
    <h1>Stolpersteine Hannover</h1>
</header>
<main class="container">
<div class="box1Transparent carouselWrapper">
<div id="myCarousel" class="carousel slide carouselFrame" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>

    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Picture/SliderPic1.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Es gibt viele Stolpersteine in Hannover
                    <a class="btn btn-default btn-outline-dark" href='#'>
                        Zur Karte
                    </a>
                </p>
            </div>
        </div>
        @*<div class="item">
            <img src="~/Picture/SliderPic2.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Es gibt viele Stolpersteine in Hannover
                    <a class="btn btn-default" href='#' id="MapBtn">
                        Zur Karte
                    </a>
                </p>
            </div>
        </div>*@
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
</div>

<div class="box2White">
<div id="map" class="map" tabindex="0"></div>
<div class="modal fade" id="newStepStone" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <p>Neuer Stolperstein</p>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="form-horizontal col-md-6">
                        <div class="form-group">
                            <label for="stepStoneName"> Stolpersteinname: </label>
                            <input type="text" id="stepStoneName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="stepStoneInformation">Stolperstein Informationen:</label>
                            <textarea class="form-control" id="stepStoneInformation" rows="5"></textarea>
                        </div>
                    </div>
                    <div class="form-horizontal col-md-4" id="ImageUploadDiv">
                        <label for="stepStoneImage" class="hidden-sm hidden-md">Stolperstein Bild</label>
                        <label for="stepStoneImage" class="visible-sm visible-md text-center">Stolperstein Bild</label>
                        <!--<input id="stepStoneImage" type="file" class="form-control" style="height: 100%" aria-label="" accept="image/*"  hidden draggable="true" contenteditable="true" inputmode="katakana">-->
                            <input type="file" hidden style="visibility:hidden;" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>
</div>
</main>
