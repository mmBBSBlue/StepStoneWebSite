@model StepStone

@*Close Button*@
<div style="top: 0px;position: absolute;right: 1px;z-index: 99999;">
        <button type="button" id="StepStonePopUp_close" class="btn btn-danger btn-sm" onclick="ClosePopup()" style="position:relative; z-index:99">X</button>
</div>
<div class="col-lg-12">
    @*Title*@
    <div class="row"  style="text-align:center">
        <div class="col-lg-12">
            <label><b>Stolperstein-Information</b></label>    
        </div>
    </div>
    @*Description*@
    <div class="row">
        <div class="col-lg-12" style="text-align:center">
            <label>Beschreibung:</label>
        </div>
        <div class="col-lg-12">
            <label>@Model.Description</label>
        </div>
    </div>
    @*Picture*@
    <div class="row">
        <div class="col-lg-12">
            <img src="@Url.Action("GetStepStonePicture", "Home", new StepStone{ Lon = Model.Lon, Lat = Model.Lat })" height="185px" width="250px" />
        </div>
    </div>
</div>
<script type="text/javascript">
    // On Document Ready 
    $(function () {
        // Redesign from Popup
        $("#StepStonePopUp").css("width", "auto");
        $("#StepStonePopUp").css("height", "auto");
        $("#StepStonePopUp").css("padding-bottom", "7px");

        // Now the Popup can be showed
        $("#StepStonePopUp").show();

        // New Close Event
        $("#StepStonePopUp_close").click(function (e) {
            $("#StepStonePopUp").remove();
        });
    });
</script>
